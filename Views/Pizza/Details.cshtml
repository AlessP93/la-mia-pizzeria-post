
@model Pizza

<div class="container">
	<div class="row py-5">
		<div class="col-3">
			<h3>@Model.Nome</h3>
		</div>
		<div class="col-3">
			<h5>@Model.Description</h5>
		</div>
		<div class="col-3">
			<h4>@Model.Price €</h4>
		</div>
		<div class="col-3">
			<img width=50% src="@Model.Pic">
		</div>
	</div>
	<a href="@Url.Action("Index", "pizza")">Torna alla pagina iniziale</a>
</div>



